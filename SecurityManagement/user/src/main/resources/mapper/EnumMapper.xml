<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.my.world.securitymanagement.user.mapper.EnumMapper">
    <resultMap id="enumResult" type="com.my.world.securitymanagement.user.po.Enum">
        <id property="code" column="code" jdbcType="VARCHAR"></id>
        <result property="name" column="name" jdbcType="VARCHAR"></result>
        <collection property="items" ofType="com.my.world.securitymanagement.user.vo.EnumMap">
            <id property="value" column="value" jdbcType="INTEGER"></id>
            <result  property="text" column="text" jdbcType="VARCHAR"></result>
        </collection>
    </resultMap>

    <select id="getList" resultMap="enumResult">
        SELECT * FROM enum
    </select>
    <insert id="insert" parameterType="com.my.world.securitymanagement.user.po.Enum" >
        insert into enum (id, code, name , text, value)
        values
        <foreach collection="items" item="item" index="index" separator="," >
            ((select replace(uuid(), '-', '')),#{code, jdbcType=VARCHAR},#{name, jdbcType=VARCHAR},#{item.text, jdbcType=VARCHAR},#{item.value, jdbcType=VARCHAR})
        </foreach>
    </insert>
</mapper>